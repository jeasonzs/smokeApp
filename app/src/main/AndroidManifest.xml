<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smokeapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"  >
        <activity
            android:theme="@style/AppSplash"
            android:name="com.example.smokeapp.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.example.smokeapp.MainActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.smokeapp.Sub24Activity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.smokeapp.SubHelpActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.smokeapp.SubOpenTimeActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.smokeapp.Sub7Activity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.smokeapp.Sub90Activity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.smokeapp.SubSettingActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.smokeapp.SettingOpenTimeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.smokeapp.SettingAboutUsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.smokeapp.SettingRestoreActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".DeviceListActivity"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Dialog"
            android:configChanges="orientation|keyboardHidden" />
    </application>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
</manifest>
