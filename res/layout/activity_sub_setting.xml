<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/nosmoke_text" />
    
     <LinearLayout
		android:id="@+id/linearLayoutSettingItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
        
		<ImageButton
		    android:id="@+id/imageButtonSubSettingItemBlueTooth"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/sub_setting_item_blue_tooth" />   
		<ImageButton
		    android:id="@+id/imageButtonSubSettingItemOpenTime"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/sub_setting_item_open_time" />   
		<ImageButton
		    android:id="@+id/imageButtonSubSettingItemRestore"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/sub_setting_item_restore" />     
		<ImageButton
		    android:id="@+id/imageButtonSubSettingItemAboutUs"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/sub_setting_item_about_us" />    
    </LinearLayout>  


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/linearLayoutSettingItems"
        android:layout_centerHorizontal="true" 
        android:src="@drawable/sub_setting" />

    <ImageButton
        android:id="@+id/imageButtonSubSettingReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearLayoutSettingItems"
        android:background="@drawable/sub_return_icon" />



</RelativeLayout>